<% if ((post.original != false && !is_page() && theme.copyright) || post.original){ %>
<div class="article_copyright">
    <p><span class="copy-title">題名:</span><%= post.title %></p>
    <%if(theme.word_count){%><p><span class="copy-title">文字数:</span><span class="post-count"><%=wordcount(post.content) %></span></p><%}%>
    <p><span class="copy-title">著者:</span><a href="javascript:void(0)" title="<%=config.author%>"><%=config.author%></a></p>
    <p><span class="copy-title">公開日時:</span><%= post.date.format("YYYY-MM-DD, HH:mm:ss") %></p>
    <p><span class="copy-title">更新日時:</span><%= post.updated.format("YYYY-MM-DD, HH:mm:ss") %></p>
    <span class="copy-title">ソース:</span><a class="post-url" href="<%- url_for(post.path) %>" title="<%= post.title %>"><%= post.permalink %></a>
    <p>
        <span class="copy-title">著作権:</span><i class="fa fa-creative-commons"></i> <a rel="license" href="http://creativecommons.org/licenses/by/4.0/" title="CC BY 4.0 International" target = "_blank">"クリエイティブ・コモンズ 4.0 - 表示"</a> 著者のクレジットを表示してください。
    </p>
</div>
<% } %>
